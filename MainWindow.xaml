    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="199*"/>
            <ColumnDefinition Width="143*"/>
            <ColumnDefinition Width="108*"/>
            <ColumnDefinition Width="143*"/>
            <ColumnDefinition Width="199*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="63*"/>
            <RowDefinition Height="388*"/>
        </Grid.RowDefinitions>
        <Image HorizontalAlignment="Center" VerticalAlignment="Center" Source="Resources\opera02.jpg" Stretch="UniformToFill" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="5"/>
        <Viewbox Grid.Column="2">
            <Button HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource ImageButtonStyle}" Content="Афиша" FontFamily="Verdana" FontSize="28" FontWeight="Bold" Click="AfishaButton_Click"/>
        </Viewbox>
        <DockPanel Margin="5,5,0,5">
            <Image Source="{StaticResource curtains}"></Image>
            <Viewbox Grid.Row="1" Margin="5,0,0,0">
                <TextBlock>Театр имени<LineBreak/> Ольги Кобылянской</TextBlock>
            </Viewbox>
        </DockPanel>
        <DockPanel Grid.Column="4" Margin="0,5,5,5" x:Name="UserManagement" HorizontalAlignment="Right">
            <materialDesign:PopupBox Visibility="Visible" DockPanel.Dock="Right" x:Name="UserBox" Width="{Binding RelativeSource={RelativeSource Self}, Path=ActualHeight}" Background="MediumSeaGreen" BorderBrush="MediumSeaGreen" 
  Style="{StaticResource MaterialDesignMultiFloatingActionAccentPopupBox}"
  PlacementMode="BottomAndAlignRightEdges"
  ToggleCheckedContentCommand="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Button}, Path=FloatingActionDemoCommand}"
  ToggleCheckedContentCommandParameter="wowsers">
                <materialDesign:PopupBox.ToggleCheckedContent>
                    <materialDesign:PackIcon
      Kind="DotsHorizontal"
      Width="24"
      Height="24" />
                </materialDesign:PopupBox.ToggleCheckedContent>
                <StackPanel>
                    <Button x:Name="My_AccountBtn" Style="{StaticResource MaterialDesignRaisedAccentButton}" Background="White" BorderBrush="White" Foreground="Black" HorizontalContentAlignment="Right" Click="My_AccountBtn_Click">
                        Личный кабинет
                    </Button>
                    <Button x:Name="SignOutBtn" Style="{StaticResource MaterialDesignRaisedAccentButton}" Background="White" BorderBrush="White" Foreground="Black" HorizontalContentAlignment="Right" Click="SignOutBtn_Click">
                        Сменить пользователя
                    </Button>
                </StackPanel>
            </materialDesign:PopupBox>
            <Viewbox>
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="AuthorizationBtn" Style="{StaticResource ImageButtonStyle}" Content="Авторизация / " VerticalAlignment="Center" Click="AuthorizationBtn_Click"/>
                    <Button x:Name="RegistrationBtn" Style="{StaticResource ImageButtonStyle}" Content="Регистрация" VerticalAlignment="Center" Click="RegistrationBtn_Click"/>
                </StackPanel>
            </Viewbox>

        </DockPanel>

    </Grid>
</Window>
