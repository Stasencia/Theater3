        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Authorization" Height="290" Width="270" FontFamily="Century Gothic" Closing="MetroWindow_Closing">
    <Window.Resources>
