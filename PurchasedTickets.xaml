<UserControl x:Class="Theater.PurchasedTickets"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Theater"
             mc:Ignorable="d" 
             d:DesignHeight="358" d:DesignWidth="551" FontFamily="Century Gothic">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="303*"/>
        </Grid.RowDefinitions>
        <Label HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16">Список купленных билетов</Label>
        <ScrollViewer Grid.Row="1">
            <DockPanel x:Name="TicketPanel">
                <local:PurchasedTicket HorizontalAlignment="Stretch" DockPanel.Dock="Top" Margin="5"></local:PurchasedTicket>
            </DockPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
